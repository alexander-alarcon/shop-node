- var CLASSES = {};
- CLASSES.primary = 'border border-teal-800 bg-white text-teal-800 hover:text-white hover:bg-teal-800 active:bg-teal-800 active:text-white';
- CLASSES.danger = 'border border-red-600 bg-white text-red-600 hover:text-white hover:bg-red-600 active:bg-red-600 active:text-white'

mixin formButton(action, textButton, product, btnType='primary')
  form.inline-block.mx-2(
    action=`${ action }`
    method='POST'
  )
    input(type='hidden', name='productId' value=`${ product.id }`)
    button.px-4.py-2.cursor-pointer.rounded(
      type='sumbit'
      class=`${CLASSES[btnType]}`
    ) 
      | #{ textButton }