- let n = 1;
- let limit = 5;
- let half = Math.floor(limit / 2)  
mixin paginator(pagination)
  section.Paginator.flex.items-center.justify-center
    ul.flex.items-center.justify-center.font-bold
      if (pagination.page <= half)
        - n = 1;
        while n <= limit
          li.mx-1.w-8.h-8.rounded-full.transition-colors.ease-in-out.duration-150(
            class=`hover:text-white hover:bg-teal-800 ${pagination.page == n && 'text-white bg-teal-800'}`
          )
            a(
              class="flex items-center justify-center w-8 h-8 no-underline"
              href=`?page=${n}`
            ) #{ n }
          - n += 1
      else if (pagination.page > half && pagination.page + half <= pagination.lastPage) 
        - n = pagination.page - half;
        while n <= pagination.page + half
          li.mx-1.w-8.h-8.rounded-full.transition-colors.ease-in-out.duration-150(
            class=`hover:text-white hover:bg-teal-800 ${pagination.page == n && 'text-white bg-teal-800'}`
          )
            a(
              class="flex items-center justify-center w-8 h-8 no-underline"
              href=`?page=${n}`
            ) #{ n }
          - n += 1
      else 
        - n = (pagination.lastPage - limit) + 1;
        while n <= pagination.lastPage
          li.mx-1.w-8.h-8.rounded-full.transition-colors.ease-in-out.duration-150(
            class=`hover:text-white hover:bg-teal-800 ${pagination.page == n && 'text-white bg-teal-800'}`
          )
            a(
              class="flex items-center justify-center w-8 h-8 no-underline"
              href=`?page=${n}`
            ) #{ n }
          - n += 1

