- var TYPES = {};
- TYPES.success = 'bg-teal-100 border-teal-400 text-teal-700 text-teal-500'
- TYPES.danger = 'bg-red-100 border-red-400 text-read-700 text-red-500'

mixin alert(title, msg, alertType='success')
  div#alert(
    class=`fixed mr-4 right-0 border px-4 py-3 rounded ${TYPES[alertType]}`
    role="alert"
  )
    strong.font-bold #{ title }
    span.block(class="sm:inline mr-10") #{ msg }
    span#alert-button.absolute.top-0.bottom-0.right-0.px-4.py-3
      svg.fill-current.h-6.w-6(role="button" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20")
        title Close
        path(d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z")
