extends ../layouts/main-layout.pug

block content
  .flex.justify-center
    if products.length > 0
      table.table-fixed
        thead
          tr
            th.px-4.py-2.border.border-teal-800 Product
            th.px-4.py-2.border.border-teal-800 Quantity
            th.px-4.py-2.border.border-teal-800 Actions
        tbody
          each product in products
            tr 
              td.px-4.py-2.border.border-teal-800 #{ product.productId.title }
              td.px-4.py-2.border.border-teal-800.text-center #{ product.quantity }
              td.px-4.py-2.border.border-teal-800
                +formButton('/shop/cart-delete-item', 'Remove', product.productId, 'danger')
        tfoot
          tr
            td.px-4.py-2.border.border-teal-800.text-center(colspan=3)
              a(
                href='/shop/checkout'
                class=' px-4 py-2 cursor-pointer rounded border border-teal-800 bg-white text-teal-800 hover:text-white hover:bg-teal-800 active:bg-teal-800 active:text-white'
              ) Order Now!
    else
      p No products in cart