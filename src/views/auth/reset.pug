extends ../layouts/main-layout.pug

block content
  if error.length
    +alert("Error: ", error, "danger")
  
  if success.length
    +alert("Success: ", success)
  form.max-w-full.m-auto(
    action='/auth/reset'
    method='POST'
    class='w-11/12'
  )
    .my-4
      label.block.w-full(for='email')
        | Email
        input#email.w-full.block.px-4.py-2.border.border-solid.border-teal-800.rounded.outline-none(
          type='email'
          name='email'
        )

    .my-4
      +button('Reset')
