extends ../layouts/main-layout.pug

block content
  if error.length
    +alert("Error: ", error, "danger")

  if success.length
    +alert("Success: ", success)

  form.max-w-full.m-auto.p-4.bg-white.rounded-lg.shadow-lg(
    action='/auth/new-password'
    method='POST'
    class='sm:w-4/5 md:w-1/2'
  )
    .my-4
      h3 New password
    .my-4
      input(type='hidden' name='userId' value=`${ userId }`)
      input(type='hidden' name='passwordToken' value=`${ passwordToken }`)
      label.block.w-full(for='password')
        | Password
        input#password.w-full.block.px-4.py-2.border.border-solid.border-teal-800.rounded.outline-none(
          type='password'
          name='password'
        )

    .my-4
      +button('Update password')
